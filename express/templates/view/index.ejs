<!DOCTYPE html>
<html lang="en">
    <%- include('./partial/head.ejs') %>
<body>
    <%- include('./partial/nav.ejs') %>

    <div class="blgs content">
        <h2>All Blogs</h2>

        <% if(blogs.length > 0) { %> 
            <% blogs.forEach(blog => { %>
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% }); %> 
        <% } else {  %>
            <h3><%= noBlogs %></h3>
        <% } %>
    </div>
</body>
</html>